{{#each records}}
<li>
<a href="#search-record?recordid={{httpEncoded record_id}}" data-ajax="false">
<h2>{{title}}</h2>
<p><em>{{author}}</em></p>
<p><strong>{{type}}</strong></p>
</a>
</li>

{{else}}
<div class="ui-body">
<p class="center">I'm terribly sorry but your search for <span class="bold">"{{searchTerm}}"</span> yielded no results
</div>
{{/each}}
